<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css'/>
  </head>
  <body>
    <header class="banner">
      <% include partials/header %>
    </header>
    <main>
      <h1>Welcome to TrainingBookings</h1>
      <div id="bookingsListing">
        <% if (bookings.length == 0){ %>
          <h2>No bookings found</h3>
          <p>To create a new booking click here:</p>
          <a href="/create" id="createBooking">Create a Booking</a>
        <% } else { %>
          <h2>Current Bookings</h2>
          <a href="/create" id="createBooking">Create a Booking</a>
          <table id="bookingsTable">
            <thead>
              <tr>
                <th>Name</th>
                <th>ID</th>
                <th>Booking Date</th>
                <th>Creation Date</th>
                <th>Card No</th>
                <th>Expiry Date</th>
                <th>Security Code</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% bookings.forEach((b) => {%>
                <tr>
                  <td><%= b.name %></td>
                  <td><%= b.id %></td>
                  <td><%= b.bookingDate.toDateString() %></td>
                  <td><%= b.creationDate.toDateString() %></td>
                  <td><%= b.cardNo %></td>
                  <td><%= b.expiryMonth %>/<%= b.expiryYear %></td>
                  <td><%= b.securityCode %></td>
                  <td>
                    <button>Modify</button>
                    <button>Delete</button>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        <% } %>
      </div>
    </main>
    <footer class="banner">
      <% include partials/footer %>
    </footer>
  </body>
</html>
